{
  "rules": {
    ".read": false,
    ".write": false,
    "checkAccess": {
      ".read": "auth != null && root.child('admins').hasChild(auth.uid)",
      ".write": false
    },
    "admins": {
      ".read": true,
      ".write": false
    },
    "rooms": {
      ".read": true,
      ".write": "auth != null && root.child('admins').hasChild(auth.uid)"
    },
    "sessions": {
      ".read": true,
      ".write": "auth != null && root.child('admins').hasChild(auth.uid)"
    },
    "speakers": {
      ".read": true,
      ".write": "auth != null && root.child('admins').hasChild(auth.uid)"
    },
    "tracks": {
      ".read": true,
      ".write": "auth != null && root.child('admins').hasChild(auth.uid)"
    },
    "votes": {
      ".read": "root.child('admins').hasChild(auth.uid)",
      "$user_id": {
        ".read": "$user_id === auth.uid",
        "$session_id": {
          ".write": "$user_id === auth.uid",
          ".validate": "root.child('sessions').hasChild($session_id) && newData.hasChildren(['rating'])",
          "rating": {
            ".validate": "newData.val().matches(/^[1-5]$/i)"
          }
        }
      }
    },
    "favorites": {
      "$user_id": {
        ".read": "$user_id === auth.uid",
        ".write": "$user_id === auth.uid",
        "$session_id": {
          ".validate": "root.child('sessions').hasChild($session_id)"
        }
      }
    }
  }
}
