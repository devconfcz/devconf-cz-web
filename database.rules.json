                        ".read": true,
                        ".write": "auth != null && root.child('admins').hasChild(auth.uid)"
                },
                "speakers": {
                        ".read": true,
                        ".write": "auth != null && root.child('admins').hasChild(auth.uid)"
                },
                "tracks": {
                        ".read": true,
                        ".write": "auth != null && root.child('admins').hasChild(auth.uid)"
                },
                "votes": {
                        ".read": true,
                        ".write": "auth != null"
                },
                "favorites": {
                        ".read": true,
                        ".write": "auth != null"
                }
        }
}
